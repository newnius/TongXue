<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/bottomBg"/>
            <corners android:radius="5dip"/>
            <stroke
                android:width="0.6dp"
                android:color="@color/m2"/>
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/skyblue"/>
            <corners android:radius="5dip"/>
            <stroke
                android:width="0.6dp"
                android:color="@color/m2"/>
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp" />
        </shape>
    </item>

</selector> 