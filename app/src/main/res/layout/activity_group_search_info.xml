<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/linen">

    <ImageView
        android:id="@+id/bgImg"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="-70dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg0" />


    <com.tongxue.client.View.PullScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:headerHeight="340dp"
        app:headerVisibleHeight="70dp"
        android:fillViewport="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/head"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="140dp"
                android:background="@android:color/transparent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:id="@+id/group_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text=""
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:shadowColor="@color/black"
                        android:shadowDx="3.0"
                        android:shadowDy="3.0"
                        android:shadowRadius="5.0"
                        android:layout_marginLeft="130dp"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/linen"
                    android:layout_alignParentBottom="true">

                    <TextView
                        android:id="@+id/group_intro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text=""
                        android:textSize="14sp"
                        android:textColor="@color/text1"
                        android:layout_marginLeft="110dp"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <com.tongxue.client.View.RoundImageView
                    android:id="@+id/group_avatar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/head1"
                    android:layout_marginLeft="20dp"
                    android:scaleType="fitCenter"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/head"
                android:background="@color/fenge" />

            <LinearLayout
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/linen"
                android:paddingTop="10dp"
                android:layout_below="@id/line"
                android:layout_above="@+id/bottom"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/m1"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/groupInfoSize">

                    <TextView
                        android:id="@+id/label1"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/groupId"
                        android:textSize="16sp"
                        android:textColor="@color/m9" />

                    <View
                        android:id="@+id/view1"
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/m1"
                        android:layout_toRightOf="@+id/label1"/>

                    <TextView
                        android:id="@+id/groupId"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/view1"
                        android:gravity="center|left"
                        android:paddingLeft="35dp"
                        android:textSize="16sp"
                        android:textColor="@color/m9"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/m1"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/groupInfoSize">

                    <TextView
                        android:id="@+id/label2"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/groupInfoCreator"
                        android:textSize="16sp"
                        android:textColor="@color/m9" />

                    <View
                        android:id="@+id/view2"
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/m1"
                        android:layout_toRightOf="@+id/label2"/>

                    <TextView
                        android:id="@+id/groupCreator"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/view2"
                        android:gravity="center|left"
                        android:paddingLeft="35dp"
                        android:textSize="16sp"
                        android:textColor="@color/m9"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/m1"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/groupInfoSize">

                    <TextView
                        android:id="@+id/label3"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/groupInfoKind"
                        android:textSize="16sp"
                        android:textColor="@color/m9" />

                    <View
                        android:id="@+id/view3"
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/m1"
                        android:layout_toRightOf="@+id/label3"/>

                    <TextView
                        android:id="@+id/groupKind"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/view3"
                        android:gravity="center|left"
                        android:paddingLeft="35dp"
                        android:textSize="16sp"
                        android:textColor="@color/m9"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/m1"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/groupInfoSize">

                    <TextView
                        android:id="@+id/label4"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/groupInfoSize"
                        android:textSize="16sp"
                        android:textColor="@color/m9" />

                    <View
                        android:id="@+id/view4"
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/m1"
                        android:layout_toRightOf="@+id/label4"/>

                    <TextView
                        android:id="@+id/groupSize"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/view4"
                        android:gravity="center|left"
                        android:paddingLeft="35dp"
                        android:text="@string/weizhi"
                        android:textSize="16sp"
                        android:textColor="@color/m9"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/m1"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/groupInfoSize">

                    <TextView
                        android:id="@+id/label5"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/groupInfoTime"
                        android:textSize="16sp"
                        android:textColor="@color/m9" />

                    <View
                        android:id="@+id/view5"
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/m1"
                        android:layout_toRightOf="@+id/label5"/>

                    <TextView
                        android:id="@+id/groupTime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/view5"
                        android:gravity="center|left"
                        android:paddingLeft="35dp"
                        android:textSize="16sp"
                        android:textColor="@color/m9"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/m1"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/linen"
                android:layout_alignParentBottom="true">

                <Button
                    android:id="@+id/add"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="3dp"
                    android:text="@string/add"
                    android:textSize="18sp"
                    android:textColor="@color/lightblue2"
                    android:gravity="center"
                    android:background="@drawable/shape_button_search" />

            </LinearLayout>

        </RelativeLayout>

    </com.tongxue.client.View.PullScrollView>

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="#33FFFFFF">

        <ImageView
            android:id="@+id/actionbar_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back"
            android:background="@drawable/shape_button_add"/>

    </RelativeLayout>

</RelativeLayout>