<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@color/oldlace"
    android:layout_margin="11dp"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent">

    <RelativeLayout
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_below="@+id/header"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="8dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:src="@drawable/bg1"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image"
            android:text=""
            android:textSize="15sp"
            android:textColor="@color/m9"
            android:singleLine="true"
            android:ellipsize="end"
            android:paddingLeft="10dp"/>

        <RelativeLayout
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_toRightOf="@+id/image"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="110dp"
                android:text=""
                android:textSize="10sp"
                android:textColor="@color/m5"
                android:singleLine="true"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/blogTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="100dp"
                android:text=""
                android:textSize="10sp"
                android:textColor="@color/m5"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/subtitle"
            android:layout_above="@+id/bottom"
            android:lines="3"
            android:ellipsize="end"
            android:text=""
            android:textSize="13sp"
            android:textColor="@color/m8"
            android:paddingTop="5dp"/>

        <LinearLayout
            android:id="@+id/bottom"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp" >

                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:padding="2dp"
                    android:src="@drawable/lan"/>

                <TextView
                    android:id="@+id/blogLan"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textSize="10sp"
                    android:textColor="@color/text1"
                    android:gravity="center"
                    android:paddingLeft="2dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="14dp" >

                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:padding="4dp"
                    android:src="@drawable/zan"/>

                <TextView
                    android:id="@+id/blogZan"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textSize="10sp"
                    android:textColor="@color/text1"
                    android:gravity="center"
                    android:paddingLeft="2dp" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
